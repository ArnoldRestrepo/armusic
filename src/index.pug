                            .collapse-navbar-collapse#menu
                                ul.nav.navbar-nav.Nav-ul.is-hover
                                    - var items = ["API","SOBRE NOSOTROS","BLOG","AUTOR"]
                                    each list in items
                                        li
                                            a.ul-transition= list
                                ul.nav.navbar-nav.navbar-right
                    .row



                        
                                
                                




            

    
